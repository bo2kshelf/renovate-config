{
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":prConcurrentLimit20",
    ":separateMultipleMajorReleases",
    ":semanticCommitType(chore)",
    ":timezone(Asia/Tokyo)",
    "schedule:weekly",
    "docker:pinDigests",
    "github>hatena/renovate-config:automergePin",
    "github>hatena/renovate-config:automergeTypesMinor"
  ],
  "labels": ["renovate"],
  "npm": {
    "extends": [":automergePatch", ":separatePatchReleases"],
    "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest"]
  },
  "circleci": {
    "enabled": true,
    "automerge": true,
    "semanticCommitType": "ci",
    "packageRules": [
      {
        "groupName": "Node Docker digests in CircleCI",
        "packageNames": ["cimg/node", "circleci/node", "node"]
      }
    ]
  }
}
